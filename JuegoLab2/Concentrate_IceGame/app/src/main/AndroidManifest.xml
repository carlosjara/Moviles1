        android:allowBackup="true"
        android:icon="@mipmap/brain"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SeleccionJugadores"
            android:label="@string/title_activity_seleccion_jugadores"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SeleccionNombres"
            android:label="@string/title_activity_seleccion_nombres"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LogicaJuego"
            android:label="@string/title_activity_logica_juego"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
